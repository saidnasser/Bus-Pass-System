<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blurred33"
    android:layout_centerHorizontal="true"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    tools:context=".Main7Activity">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo99" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView5"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="22dp"
        android:text="@string/duration" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView13"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="22dp"
        android:layout_centerHorizontal="true"
        android:text="" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView14"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:background="@drawable/rectanglestyle"
        android:orientation="vertical">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText11"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/fontsize"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:text="@string/code"


        />

    <EditText
        android:id="@+id/editText11"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:background="@drawable/edittextstyle"
        android:ems="10"
        android:hint="Code"
        android:inputType="number"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:maxLength="6"
        android:textAlignment="center"
        android:textColorHint="@android:color/darker_gray" />

    <Button
        android:id="@+id/button6"
        style="@style/ButtonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/editText11"
        android:layout_marginTop="5dp"
        android:background="@drawable/animationbutton"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="@string/submit" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/button6"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:text="@string/trouble" />

    <Button
        android:id="@+id/button9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView15"
        android:layout_centerHorizontal="true"
        android:background="@drawable/animationbutton"
        android:textColor="@android:color/white"
        android:layout_marginTop="35dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:onClick="resend"
        style="@style/ButtonText"
        android:text="@string/resend" />

    </LinearLayout>




</RelativeLayout>